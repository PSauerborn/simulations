[flake8]
# Black compatibility settings
# See: https://black.readthedocs.io/en/stable/guides/using_black_with_other_tools.html

max-line-length = 100

# Ignore rules that conflict with Black:
# E203: whitespace before ':' (Black formats slices differently)
# E501: line too long (handled by max-line-length, Black may exceed in some cases)
# W503: line break before binary operator (Black prefers this style)
# W504: line break after binary operator (conflicts with W503)
# E231: missing whitespace after ',' (Black handles this)
extend-ignore = E203, E501, W503, W504, E231

# Exclude directories
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    *.egg-info,
    .eggs

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
